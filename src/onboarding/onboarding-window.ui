<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="BananaOnboardingWindow" parent="AdwWindow">
    <property name="modal">true</property>
    <property name="deletable">false</property>
    <property name="resizable">false</property>
    <property name="default-width">500</property>
    <property name="default-height">300</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="bottom">
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-title">false</property>
            <child type="end">
              <object class="GtkButton" id="onboardingHeaderNext">
                <property name="label">Next</property>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkStack" id="onboardStack">
            <child>
              <!--Game selection-->
              <object class="GtkStackPage">
              <property name="name">chooseGame</property>
              <property name="title">Game Select</property>
              <property name="child">
                <object class="GtkBox" id="onboardChooseGameBox">
                  <property name="orientation">vertical</property>
                  <property name="spacing">20</property>
                  <property name="margin-start">20</property>
                  <property name="margin-end">20</property>
                  <property name="margin-top">85</property>
                  <child>
                    <object class="GtkLabel" id="headerLabel">
                      <property name="label">Choose game executable</property>
                      <style>
                        <class name="title-1"/>
                      </style>
                    </object>
                  </child>
                  <child>
                    <object class="GtkLabel" id="subtitleLabel">
                      <property name="label">Select a Unity game executable to install plugins onto.</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkBox" id="onboardButtonsBox">
                    <property name="margin-start">180</property>
                      <child>
                        <object class="GtkButton" id="chooseDirButton">
                          <property name="label">Open file...</property>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                        </object>
                      </child>
                    </object>
                  </child>
                </object>
              </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
              <property name="name">bepInstall</property>
              <property name="title">Install BepInEx</property>
              <property name="child">
                    <object class="GtkBox" id="onboardInstallBepBox">
                  <property name="orientation">vertical</property>
                  <property name="spacing">20</property>
                  <property name="margin-start">20</property>
                  <property name="margin-end">20</property>
                  <property name="margin-top">85</property>
                  <child>
                    <object class="GtkLabel" id="headerBepLabel">
                      <property name="label">Install BepInEx</property>
                      <style>
                        <class name="title-1"/>
                      </style>
                    </object>
                  </child>
                  <child>
                    <object class="GtkLabel" id="subtitleBepLabel">
                      <property name="label">Install the BepInEx plugin loader onto this game to load plugins.</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkBox" id="onboardBepButtonsBox">
                    <property name="margin-start">200</property>
                      <child>
                        <object class="GtkButton" id="installBepButton">
                          <property name="label">Install</property>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                        </object>
                      </child>
                    </object>
                  </child>
                </object>
              </property>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
